# OpenBoot SSH Configuration
# Safe defaults for development environments

# Global settings
Host *
    # Keep connections alive (prevent timeout)
    ServerAliveInterval 30
    ServerAliveCountMax 3
    
    # SSH connection multiplexing (faster subsequent connections)
    ControlMaster auto
    ControlPath ~/.ssh/sockets/%r@%h-%p
    ControlPersist 600
    
    # Use keychain for passphrases (macOS)
    AddKeysToAgent yes
    UseKeychain yes

# GitHub - use port 443 to bypass firewalls that block port 22
Host github.com
    HostName ssh.github.com
    Port 443
    User git

# GitLab - use port 443 to bypass firewalls
Host gitlab.com
    HostName altssh.gitlab.com
    Port 443
    User git

# Example: Add your own hosts below
# Host myserver
#     HostName server.example.com
#     User myuser
#     IdentityFile ~/.ssh/id_myserver
